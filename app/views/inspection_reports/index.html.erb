        <br>
       <p ><%= image_tag(@user.image.url(:thumb)) %></p>
</div>




<div class="text-center">
<%= button_to 'New Report', new_inspection_report_path, :class => "btn btn-primary", :method => :get %>




<div class ="btn btn"><%=link_to "Current Report" ,inspection_report_path(@inspection_report_current)  %></div>

