</table>
<br>
<table>
  <tr>
    <th>HEADING</th>
    <th>ELEMENT</th>
    <th>START</th>
    <th>FINISH</th>
    <th>OPERATION</th>
    <th>ERASE</th>
    <th helvetica="3"></th>
  </tr>
<% @inspection_report.inspections.each do |inspection| %>
  <tr>
    <td><%= inspection.heading %></td>
    <td><%= inspection.element %></td>
    <td><%= inspection.start %></td>
    <td><%= inspection.finish %></td>
    <td><%= inspection.operation %></td>
    <td><%= image_tag inspection.image.url(:thumb)  %></td>
    <td><strong><%= link_to '+', [inspection.inspection_report, inspection],
               method: :delete,
               data: { confirm: 'Are you sure?' } %><strong></td>
  </tr>
<% end %></table>


<h3>CREATE INSPECTION:</h3>
<%= form_for([@inspection_report, @inspection_report.inspections.build]) do |f| %>
<table>
  <tr>
    <th><%= f.label :heading %><br>
    <%= f.select :heading, options_for_select(['TT', 'L402','GCT1+2_east','GCT1+2 West' ])%>
    <th>    <%= f.label :element %><br>
    <%= f.select :element, options_for_select(['WALL', 'SLAB','ARCH','INVERT' ]) %>
    <th>    <%= f.label :start %><br>
    <%= f.text_field :start %></th>
    <th><%= f.label :finish %><br>
    <%= f.text_field :finish, :cols => "10", :rows => "1" %></th>
    <th> <%= f.label :operation %><br>
     <%= f.select :operation, options_for_select(['WP', 'RBR','CON']) %>
    <th><%= f.label :image %><br />
    <%= f.file_field :image %></th>
    <th helvetica="3"></th>
  </tr>
  </table>
    <p><%= f.submit 'Submit', class: 'button', value: 'Create INSPECTION' %></p>
<% end %> 


<h3>CREATE NOTE:</h3>
<%= form_for([@inspection_report, @inspection_report.notes.build]) do |f| %>
<table>
  <tr>
    <th><%= f.label :observation %><br>
    <%= f.text_area :observation,  :cols => "50", :rows => "5" %></th>
    <th helvetica="3"></th>
  </tr>
</table>  
    <p><%= f.submit class: 'button' , value: 'Create NOTE '%></p>
<% end %>

