<h1>Daily REPORT</h1>

<strong>
<p>Daily REPORT includes summary of all daily activities.
<br>
</strong>

<%= form_for daily_reports_path do |f| %>
<table>
  <tr> 
    <th><%= f.label :Look_UP %><br>
    <%= f.date_select :date %></th>
    <th helvetica="3"></th>
  </tr>
</table>
<p><%= f.submit 'Submit', class: 'button', value: 'Find REPORT' %></p>
<% end %> 

<h3>NARRATIVE</h3>
<table>
  <tr> 
    <th helvetica="3"></th>
  </tr>
<% @daily_report.narratives.each do |narrative| %>
  <tr>
    <th><%= narrative.narrative %></th>
     <td><%= link_to '+', [narrative.daily_report, narrative],
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>



<h3>SUMMARY</h3>

<table>
  <tr>
    <th>HEADING</th>
    <th>ELEMENT</th>
    <th>START</th>
    <th>FINISH</th>
    <th>OPERATION</th>
    <th helvetica="3"></th>
  </tr>

<% @walls.each do |wall| %>
  <tr>
    <td><%= wall.heading %></td>
    <td><%= wall.element %></td>
    <td><%= wall.start %></td>
    <td><%= wall.finish %></td>
    <td><%= wall.operation %></td>
    <td><%= image_tag wall.image.url(:thumb) %></td>
  </tr>
<% end -%>
   
   <% @slabs.each do |slab| %>
  <tr>
    <td><%= slab.heading %></td>
    <td><%= slab.element %></td>
    <td><%= slab.start %></td>
    <td><%= slab.finish %></td>
    <td><%= slab.operation %></td>
     <td><%= image_tag slab.image.url(:thumb) %></td>
  </tr>
<% end -%>
</table>

<% @walls.each do |wall| %>
  <tr>
    <td><%= image_tag wall.image.url(:medium) %></td>
  </tr>
<% end -%>

<% @slabs.each do |slab| %>
  <tr>
    <td><%= image_tag slab.image.url(:medium) %></td>
  </tr>
<% end -%>


<h3>CREATE NARRATIVE:</h3>
<%= form_for([@daily_report, @daily_report.narratives.build]) do |f| %>
<table>
  <tr>
    <%= f.text_area :narrative,  :cols => "50", :rows => "5" %></th>
    <th helvetica="3"></th>
  </tr>
</table>  
    <p><%= f.submit class: 'button' , value: 'Create Narrative '%></p>
<% end %>



<h5>
