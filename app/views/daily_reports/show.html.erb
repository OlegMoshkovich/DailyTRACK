<p class = "text-left"><strong><%= link_to 'Back',daily_reports_path %><strong></p>
<h1 class="text-center ">Daily Report</h1>

    <div class='row'>
      <div class ='span8'>
        <h3>Summary:</h3>
        <table class="table" >
          <tr>
            <th>Heading</th>
            <th>Element</th>
            <th>Start</th>
            <th>Finish</th>
            <th>Operation</th>
            <th>Images</th>
          </tr>
          <% @walls.each do |wall| %>
            <tr>
              <td><%= wall.heading %></td>
              <td><%= wall.element %></td>
              <td><%= wall.start %></td>
              <td><%= wall.finish %></td>
              <td><%= wall.operation %></td>
              <td><%= image_tag wall.image.url(:thumb) %></td>
            </tr>
          <% end -%>
           <% @slabs.each do |slab| %>
              <tr>
                <td><%= slab.heading %></td>
                <td><%= slab.element %></td>
                <td><%= slab.start %></td>
                <td><%= slab.finish %></td>
                <td><%= slab.operation %></td>
                <td><%= image_tag slab.image.url(:thumb) %></td>
              </tr>
          <% end -%>
           <% @arches.each do |arch| %>
            <tr>
              <td><%= arch.heading %></td>
              <td><%= arch.element %></td>
              <td><%= arch.start %></td>
              <td><%= arch.finish %></td>
              <td><%= arch.operation %></td>
              <td><%= image_tag arch.image.url(:thumb) %></td>
            </tr>
            <% end -%>      
        </table>
      </div>
     
